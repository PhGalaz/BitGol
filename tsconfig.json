{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "rootDir": "./src",  
        "outDir": "./build",
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "noImplicitAny": true,                
        "strictNullChecks": true,              
        "strictFunctionTypes": true,           
        "strictBindCallApply": true,           
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noImplicitThis": true,                
        "alwaysStrict": true,
        "target": "es6",   
        "experimentalDecorators": true,
        "lib": ["esnext"],
        "baseUrl": "./", 
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }, 
        "types": ["node", "jest"],   
        "esModuleInterop": true,
        "skipLibCheck": true,                    
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "exclude": [
         "node_modules", "prisma/*", "./coverage", "./dist", "__tests__", "jest.config.js"
    ]
  }